<h1>All tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %>
    <% if logged_in? %>
      <%= link_to "Delete this tag", tag_path(tag),
          method: :delete, data: {confirm: "Do you want to really delete this tag?"} %></li>
    <% end %>
  <% end %>
</ul><br/>

<%= link_to "<< Back to the articles list", articles_path %>
